@model PassportManagementSystem.Models.UserRegistration
@{
    ViewBag.Title = "Reset Password";
    <link href="~/Styles/ResetPassword.css" rel="stylesheet" />
}

<h3 class="title-register">RESET PASSWORD</h3>
<div style="float:right;color:red;font-weight:bold;margin-right:10%;">* All Fields are Required</div>
<div class="register-form">
    <center>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.PasswordFor(a => a.Password, new { @class = "form-control", @placeholder = "Password *" })
                @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(a => a.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password *" })
                @Html.ValidationMessageFor(a => a.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
            <input type="submit" class="btn btn-primary" value="UPDATE" style="margin-top:3%;" />
        }
        @if (ViewBag.error != null)
        {
            <div class="alert alert-dismissible alert-danger" style="position:absolute;margin-top:3%;margin-left:5%;width:32%;">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <span>@ViewBag.error</span>
            </div>
        }
    </center>
</div>
